@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/_web/css/bootstrap.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h2>@ViewBag.TitlePag</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2">
                        @Html.ActionLink("Mis reservas", "Index", "Reserva")
                    </div>
                    <div class="col-md-2">
                        @Html.ActionLink("Horas disponibles", "HorasDisponibles", "Reserva")
                    </div>
                    <div class="col-md-2">
                        @Html.ActionLink("Salir", "Logout", "Usuario")
                    </div>
                </div>
                <hr />

                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>