
@{
    ViewBag.Title = "Login";
    ViewBag.TitlePag = "Acceso Pacientes";

    Layout = "~/Views/Shared/_Login.cshtml";
}

<form id="frm" name="frm" method="post">
    <div class="form-group">
        <label>Usuario:</label>
        <input  class="form-control" type="text" name="usuario" value="" placeholder="Ingrese su usuario"  required />
    </div>

    <div class="form-group">
        <label>Contraseña:</label>
        <input  class="form-control" type="password" name="clave" value="" placeholder="Ingrese su contraseña"  required />
    </div>

    <div class="form-group text-center">
        <input type="submit" value="Ingresar" class="btn btn-primary" />
    </div>

    <div style="display: @ViewBag.Display" class="alert alert-danger">
        @ViewBag.Msg
    </div>
</form>

